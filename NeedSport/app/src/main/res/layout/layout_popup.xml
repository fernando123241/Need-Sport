<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roundstyle"
    android:backgroundTint="@color/white">

    <TextView
        android:id="@+id/text_popup"
        android:layout_width="322dp"
        android:layout_height="119dp"
        android:gravity="center"
        android:justificationMode="inter_word"
        android:text="Sebelum melakukan latihan, disarankan untuk melakukan pemanasan terlebih dahulu untuk menghindari ketidakefektifan dalam olahraga dan dapat membantu dalam penumbuhan otot dan sendi lebih siap bergerak"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/text_popup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peringatan"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_popup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>